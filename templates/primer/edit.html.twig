{% extends "base.html.twig" %}

{% block title %}Edit the primer: {{ primer.autoName }} - {{ primer.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('primer_index') }}">Primers list</a></li>
    <li class="breadcrumb-item"><a href="{{ path('primer_view', { 'id': primer.id, 'slug': primer.slug }) }}">{{ primer.autoName }} - {{ primer.name }}</a></li>
    <li class="breadcrumb-item active">Edit</li>
{% endblock %}

{% block body %}
    <h1 class="page-header">Edit a primer</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">
                    Save changes
                </button>
            </div>
        </div>
    {{ form_end(form) }}

    {% include 'primer/_nucleotides_table.html.twig' %}
{% endblock %}
