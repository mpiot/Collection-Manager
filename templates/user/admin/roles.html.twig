{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('user_index') }}">User list</a></li>
    <li class="breadcrumb-item active">Edit roles</li>
{% endblock %}

{% block body %}
    <h2>Edit roles for: {{ user.fullName }}</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">
                    Save changes
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
