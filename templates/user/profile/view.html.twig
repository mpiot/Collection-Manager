{% extends 'base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">My profile</li>
{% endblock %}

{% block body %}
    <div class="btn-group btn-group-sm float-right" role="group">
        <a class="btn btn-secondary" href="{{ path('user_password_edit') }}">
            <span class="fas fa-edit"></span>
            Change password
        </a>

        <a class="btn btn-warning" href="{{ path('user_profile_edit') }}">
            <span class="fas fa-edit"></span>
            Edit
        </a>
    </div>

    <h3>{{ user.username }}</h3>
    <h4>{{ user.firstName }} {{ user.lastName }}</h4>
{% endblock %}
