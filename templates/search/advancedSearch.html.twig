{% extends 'base.html.twig' %}

{%block title %}
    Advanced search - {{ parent() }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item active">Advanced search</li>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">
                    <span class="fas fa-search"></span> Search
                </button>
            </div>
        </div>
    {{ form_end(form) }}

    {% include "search/_results.html.twig" %}
{% endblock %}
