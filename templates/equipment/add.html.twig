{% extends 'base.html.twig' %}

{% block title %}
    Add an equipment
{% endblock %}

{% block nav %}
    {% include 'nav/equipment.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ path('equipment_index') }}">Equipments</a></li>
    <li class="breadcrumb-item active">Add an equipment</li>
{% endblock %}

{% block body %}
    <h1>Add an equipment</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">
                    Save
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
