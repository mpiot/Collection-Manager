{% extends "plasmid/base.html.twig" %}

{% block title %}Plasmid{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Plasmids list</li>
{% endblock %}

{% block plasmid_body %}
    {% if app.user.isInGroup %}
        <div>
            <a class="btn btn-default" href="{{ path('plasmid_add') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a plasmid
            </a>
        </div>
    {% endif %}

    <h2 class="sub-header">Plasmids list</h2>

    {% include '_list_filter.html.twig' with {
        'url': url('plasmid_index', {'q': '__query__', 'group': '__group__', 'p': '__page__'}),
        'ajaxUrl': url('plasmid_index_ajax', {'q': '__query__', 'group': '__group__', 'p': '__page__'})
    } %}

    {{ list.content|raw }}
{% endblock %}
