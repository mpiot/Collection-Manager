{% extends "group/base.html.twig" %}

{% block title %}Edit a group{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('group_index') }}">Groups</a></li>
    <li><a href="{{ path('group_view', { 'slug': group.slug }) }}">{{ group.name }}</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block group_body %}
    <h2 class="sub-header">Edit the group: {{ group.name }}</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Save changes" />
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
