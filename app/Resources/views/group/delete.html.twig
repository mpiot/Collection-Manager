{% extends "group/base.html.twig" %}

{% block title %}Delete the group: {{ group.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('group_index') }}">Groups</a></li>
    <li><a href="{{ path('group_view', { id: group.id }) }}">{{ group.name }}</a></li>
    <li class="active">Delete</li>
{% endblock %}

{% block group_body %}
    <div>
        <a type="button" class="btn btn-default" href="{{ path('group_index') }}">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            Groups list
        </a>
    </div>

    <h2>Delete the group: {{ group.name }}</h2>

    <div class="alert alert-danger" role="alert"><b>WARNING !</b> You delete a group !</div>

    <p>Do you confirm the deletion of the group: <b>{{ group.name }}</b> ?</p>

    <form action="{{ path('group_delete', {'id': group.id}) }}" method="post">
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}

        <a class="btn btn-success" href="{{ path('group_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i>
            <b>Cancel !</b> Comeback in a safe area :)
        </a>

        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
{% endblock %}
